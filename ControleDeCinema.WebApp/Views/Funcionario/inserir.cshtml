@model InserirFuncionarioViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Cadastro de Funcionário";
}

<div class="row mt-3">
    <div class="col-lg-6">
        <form asp-action="Inserir">
            <div class="mt-2">
                <label class="control-label">Funcionario:</label>
                <input class="form-control" asp-for="Nome" />
                <span class="text-danger my-1" asp-validation-for="Nome"></span>
            </div>

            <div class="mt-2">
                <label class="control-label">Cpf:</label>
                <input class="form-control" asp-for="Cpf" />
                <span class="text-danger my-1" asp-validation-for="Cpf"></span>
            </div>

            <div class="mt-2">
                <label class="control-label">Login:</label> 
                <input class="form-control" asp-for="Login" />
                <span class="text-danger my-1" asp-validation-for="Login"></span>
            </div>
            
            <div class="mt-2">
                <label class="control-label">Senha:</label>
                <input class="form-control" asp-for="Senha" />
                <span class="text-danger my-1" asp-validation-for="Senha"></span>
            </div>

            <div class="mt-2">
                <button class="btn btn-primary">Gravar</button>
                <a href="/filme/listar" class="btn btn-info">Voltar</a>
            </div>
        </form>
    </div>
</div>
