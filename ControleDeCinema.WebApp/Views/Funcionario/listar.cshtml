@model IEnumerable<ListarFuncionarioViewModel>
@{
    Layout = "_Layout";
    ViewBag.Title = "Listagem de Funcionários";
}

<div class="mt-3">
    <a class="btn btn-primary px-4" href="/funcionario/inserir">
        <i class="bi bi-plus-circle"></i>
        Inserir Novo Funcionario
    </a>
</div>

<div class="row gap-3 mt-3 p-2">
    @foreach (var funcionario in Model)
    {
        <div class="card col-md-5 col-lg-4 col-xl-3">
            <div class="card-body">
                <div class="row row-cols-2">
                    <div class="col-6">
                        <label class="card-title fs-6 fw-semibold d-block">Nome: @funcionario.Nome</label>
                    </div>

                    <div class="text-end">
                        <a class="btn btn-secondary btn-sm" href="/funcionario/detalhes/@funcionario.Id">
                            <i class="bi bi-search"></i>
                        </a>

                        <a class="btn btn-primary btn-sm" href="/funcionario/editar/@funcionario.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a class="btn btn-danger btn-sm" href="/funcionario/excluir/@funcionario.Id">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </div>

                <p class="card-subtitle fs-6"><strong>Id:</strong> [@funcionario.Id]</p>


            </div>
        </div>
    }
</div>

