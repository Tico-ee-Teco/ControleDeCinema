@model InserirSessaoViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Cadastro de Sessões";
}

<div class="row mt-3">
    <div class="col-lg-6">
        <form asp-action="Inserir">
            @* Seleção de Filme *@
            <div class="mt-2">
                <label class="control-label">Filme:</label>
                <select class="form-select" asp-for="IdFilme" asp-items="Model.Filmes">
                    <option value="">selecione um filme</option>
                </select>
                @*<input class="form-control" asp-for="IdFilme" />*@
                <span class="text-danger my-1" asp-validation-for="IdFilme"></span>
            </div>
            
            @* Exibição do Gênero do Filme*@
            <div class="mt-2">
                <span class="d-block">Gênero: @Model.NomeGenero</span>
            </div>
            
            @* Seleção de Sala *@
            <div class="mt-2">
                <label class="control-label">Sala:</label>
                <select class="form-select" asp-for="IdSala" asp-items="Model.Salas">
                    <option value="">selecione uma sala</option>
                </select>
                @*<input class="form-control" asp-for="IdSala" />*@
                <span class="text-danger my-1" asp-validation-for="IdSala"></span>
            </div>
            
            @* Exibição da Capacidade da Sala*@
            <div class="mt-2">
                <label class="control-label">Capacidade:</label>
                <input type="number" class="form-control" asp-for="NumeroMaximoIngresso" min="1"/>
                <span class="text-danger my-1" asp-validation-for="NumeroMaximoIngresso"></span>
            </div>
            
            @* Seleção de Data e Hora *@
            <div class="mt-2">
                <label class="control-label">Inicio:</label>
                <input type="datetime-local" class="form-control" asp-for="Data" />
                <span class="text-danger my-1" asp-validation-for="Data"></span>
            </div>

            <div class="mt-2">
                <button class="btn btn-primary">Gravar</button>
                <a href="/sessao/listar" class="btn btn-info">Voltar</a>
            </div>
        </form>
    </div>
</div>
