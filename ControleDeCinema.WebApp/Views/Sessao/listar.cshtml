@model IEnumerable<AgruparSessaoViewModel>;
@{
    Layout = "_Layout";
    ViewBag.Title = "Listagem de Sessões";
}

<div class="mt-3">
    <a class="btn btn-primary px-4" href="/sessao/inserir">
        <i class="bi bi-plus-circle"></i>
        Inserir Nova Sessão
    </a>
</div>

<div class="row gap-3 mt-3 p-2">
    @foreach (var filmeGroup in Model)
    {
        <h3> @filmeGroup.Filme</h3>
        <div class="row">
            @foreach (var sessao in filmeGroup.Sessoes)
            {
                <div class="card col-md-5 col-lg-4 col-xl-3 m-2">
                    <div class="card-body ">
                        <div class="row row-cols-2">
                            <div class="col-6">
                                <label class="card-title fs-6 fw-semibold d-block">Sala: @sessao.Sala</label>
                                <label class="card-title fs-6 fw-semibold d-block">Inicio: @sessao.Data.ToString("dd/MM HH:mm")</label>
                                @*<label class="card-title fs-6 fw-semibold d-block">Status: @sessao.Status</label>*@

                            </div>

                            <div class="text-end">
                                <a class="btn btn-secondary btn-sm" href="/sessao/detalhes/@sessao.Id">
                                    <i class="bi bi-search"></i>
                                </a>

                                <a class="btn btn-primary btn-sm" href="/sessao/editar/@sessao.Id">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <a class="btn btn-danger btn-sm" href="/sessao/excluir/@sessao.Id">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </div>
                        </div>

                        <p class="card-subtitle fs-6"><strong>Id:</strong> [@sessao.Id]</p>

                    </div>
                </div>
            }
        </div>
    }
    
</div>