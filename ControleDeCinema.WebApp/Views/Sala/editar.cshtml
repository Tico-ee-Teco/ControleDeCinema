@model EditarSalaViewModel;
@{
    Layout = "_Layout";
    ViewBag.Title = "Editar Sala";
}

<div class="row mt-3">
    <div class="col-lg-6">
        <form class="d-grid gap-4" asp-action="Editar">
            <input type="hidden" asp-for="Id" />
            <div class="mt-2">
                <label class="control-label fw-semibold">Número:</label>
                <input class="form-control" asp-for="Nome" />
                <span class="text-danger my-1" asp-validation-for="Nome"></span>
            </div>

            <div class="mt-2">
                <label class="control-label fw-semibold">capacidade:</label>
                <input class="form-control" asp-for="Capacidade" />
                <span class="text-danger my-1" asp-validation-for="Capacidade"></span>
            </div>

            <div class="mt-2 d-grid gap-2 d-md-block">
                <button class="btn btn-primary px-5">
                    <i class="bi bi-floppy-fill me-1"></i>
                    Gravar
                </button>

                <a class="btn btn-secondary px-5" href="/sala/listar">
                    <i class="bi bi-arrow-return-left me-1"></i>
                    Voltar
                </a>

            </div>
        </form>
    </div>
</div>