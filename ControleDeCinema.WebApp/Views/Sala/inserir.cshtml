@model InserirSalaViewModel;
@{
    Layout = "_Layout";
    ViewBag.Title = "Cadastrar Sala";
}


<div class="row mt-3">
    <div class="col-lg-6">
        <form asp-action="Inserir">
            <div class="mt-2">
                <label class="control-label">Número:</label>
                <input class="form-control" asp-for="Nome" />
                <span class="text-danger my-1" asp-validation-for="Nome"></span>
            </div>

            <div class="mt-2">
                <label class="control-label">Capacidade:</label>
                <input class="form-control" asp-for="Capacidade" />
                <span class="text-danger my-1" asp-validation-for="Capacidade"></span>
            </div>

            <div class="mt-2">
                <button class="btn btn-primary">Gravar</button>
                <a href="/sala/listar" class="btn btn-info">Voltar</a>
            </div>
        </form>
    </div>
</div>