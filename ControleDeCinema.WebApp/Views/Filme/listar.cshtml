@model IEnumerable<ListarFilmeViewModel>

@{
    Layout = "_Layout";
    ViewBag.Title = "Listagem de Filmes";
}

<div class="mt-3">
    <a class="btn btn-primary px-4" href="/filme/inserir">
        <i class="bi bi-plus-circle"></i>
        Inserir Novo Filme
    </a>
</div>

<div class="row gap-3 mt-2 p-2">
    @foreach (var filme in Model)
    {
        <div class="card col-md-5 col-lg-4 col-xl-3">
            <div class="card-body">
                <div class="row row-cols-2">
                    <div class="col-6">
                        <label class="card-title fs-6 fw-semibold d-block">Filme: @filme.Nome</label>
                        <label class="card-title fs-6 fw-semibold d-block">Gênero: @filme.Genero</label>
                        <label class="card-title fs-6 fw-semibold d-block">Duração: @filme.Duracao</label>

                    </div>

                    <div class="text-end">
                        <a class="btn btn-secondary btn-sm" href="/filme/detalhes/@filme.Id">
                            <i class="bi bi-search"></i>
                        </a>

                        <a class="btn btn-primary btn-sm" href="/filme/editar/@filme.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a class="btn btn-danger btn-sm" href="/filme/excluir/@filme.Id">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </div>

                <p class="card-subtitle fs-6"><strong>Id:</strong> [@filme.Id]</p>
                

            </div>
        </div>
    }
</div>
