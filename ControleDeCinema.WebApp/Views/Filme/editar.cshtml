@model EditarFilmeViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Edição de Filme";
}

<div class="row mt-3">
    <div class="col-lg-6">
        <form asp-action="Editar">
            <div class="mt-2">
                <label class="control-label">Filme:</label>
                <input class="form-control" asp-for="Nome" />
                <span class="text-danger my-1" asp-validation-for="Nome"></span>
            </div>

            <div class="mt-2">
                <label class="control-label">Genero:</label>
                <select class="form-select" asp-for="IdGenero" asp-items="Model.Generos">
                    <option></option>
                </select>
                <span class="text-danger my-1" asp-validation-for="IdGenero"></span>
            </div>

            <div class="mt-2">
                <label class="control-label">Duração:</label>
                <input type="number" class="form-control" asp-for="Duracao" />
                <span class="text-danger my-1" asp-validation-for="Duracao"></span>
            </div>

            <div class="mt-2">
                <label class="control-label">Estreia:</label>
                <input type="checkbox" asp-for="Estreia" />
                <span class="text-danger my-1" asp-validation-for="Estreia"></span>
            </div>

            <div class="mt-2">
                <button class="btn btn-primary">Gravar</button>
                <a href="/filme/listar" class="btn btn-info">Voltar</a>
            </div>
        </form>
    </div>
</div>
