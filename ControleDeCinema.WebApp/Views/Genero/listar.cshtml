@model IEnumerable<ListarGeneroViewModel>
@{
    Layout = "_Layout";
    ViewBag.Title = "Listagem de Gêneros";
}

@* Cabeçalho *@
<div class="mt-3">
    <a class="btn btn-primary px-4" href="/genero/inserir">
        <i class="bi bi-plus-circle"></i>
        Inserir Novo Gênero
    </a>
</div>

@* Lista *@
<div class="row gap-3 mt-3 p-2">
    @foreach (var genero in Model)
    {
        <div class="card col-md-5 col-lg-4 col-xl-3">

            <div class="card-body">

                <div class="row row-cols-2">
                    <label class="card-title fs-5 fw-semibold">Genero: @genero.Nome</label>

                    <div class="text-end">
                        <a class="btn btn-secondary btn-sm" href="/genero/detalhes/@genero.Id">
                            <i class="bi bi-search"></i>
                        </a>

                        <a class="btn btn-primary btn-sm" href="/genero/editar/@genero.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a class="btn btn-danger btn-sm" href="/genero/excluir/@genero.Id">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </div>

                <p class="card-subtitle fs-6"><strong>Id:</strong> [@genero.Id]</p>

            </div>
        </div>
    }
</div>