@{
    string caminho = Context.Request.Path;

    var filmeAtivo = caminho.StartsWith("/filme") ? "nav-link active" : "nav-link";
    var generoAtivo = caminho.StartsWith("/genero") ? "nav-link active" : "nav-link";
    var funcionarioAtivo = caminho.StartsWith("/funcionario") ? "nav-link active" : "nav-link";
}

<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Controle De Cinema</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="container">
        <header class="row row-cols-2 align-items-center my-3">
            <label class="fs-3 fw-semibold">Controle de Cinema</label>

            <ul class="nav nav-pills d-grid d-md-flex justify-content-md-end">
                <li class="nav-item"><a href="/filme/listar" class="@filmeAtivo">Filmes</a></li>
                <li class="nav-item"><a href="/genero/listar" class="@generoAtivo">Gêneros</a></li>
                <li class="nav-item"><a href="/funcionario/listar" class="@funcionarioAtivo">Funcionário</a></li>
                @* <li class="nav-item"><a href="/conta/listar" class="@contaAtivo">Conta</a></li>*@
            </ul>
        </header>
    </nav>

    <main class="container mt-4">
        <h1>@ViewBag.Title</h1>
        <hr/>
        @RenderBody()
    </main>

    <footer class="border-top text-center mt-auto">
        <p class="my-3">&copy; - 2024 - Controle de Cinema 2.0</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  @*<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
   <script src="/lib/jquery-mask-plugin/dist/jquery.mask.min.js"></script>*@
        
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
